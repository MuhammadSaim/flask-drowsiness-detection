{% extends 'layouts/dashboard.jinja2' %}

{% block title %}Dashboard{% endblock %}

{% block content %}

    <div class="container text-center">
        <h1 class="text-4xl text-black font-bold">Driver Drowsiness Detection System</h1>
        <div class="mt-3" x-data="{open: false}">
            <button class="btn btn-primary" @click="open = true">Start</button>
            <button class="btn btn-error" @click="open = false">Stop</button>

            <img x-show="open" class="rounded-md shadow m-auto mt-4" src="{{ url_for('dashboard.video_stream') }}" style="width: 90%; height: 80vh;">

        </div>
    </div>

{% endblock %}